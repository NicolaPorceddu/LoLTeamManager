<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundColor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/backgroundColor"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="100dp">

                <ImageView
                    android:layout_width="400dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:src="@drawable/logo" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <TextView style="@style/textViewStyle"
                    android:textSize="23sp"
                    android:text="Username"/>

                <EditText style="@style/editTextStyle"
                    android:id="@+id/user"/>

                <Space style="@style/normalSpace"/>

                <TextView style="@style/textViewStyle"
                    android:textSize="23sp"
                    android:text="Password"/>

                <EditText style="@style/editTextStyle"
                    android:id="@+id/psw"
                    android:inputType="textPassword"/>

                <Space style="@style/normalSpace"/>

                <Button
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/editTextColor"
                    android:text="accedi"
                    android:textColor="@color/textColor"
                    android:textSize="18sp"
                    android:id="@+id/accedi"/>

                <Space style="@style/normalSpace" />

                <TextView
                    android:id="@+id/errore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ERRORE! Utente non registrato"
                    android:textColor="@color/errorColor"
                    android:textSize="17sp"
                    android:layout_gravity="center"
                    android:visibility="gone"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="35dp" />

                <TextView
                    android:id="@+id/reg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:text="Non hai un account? Registrati!"
                    android:textColor="@color/textColor"
                    android:textStyle="bold"
                    android:textSize="18dp"/>

            </LinearLayout>
        </ScrollView>

</android.support.constraint.ConstraintLayout>